@{
    ViewData["Title"] = "Sipariş Başarılı";
}

<!-- Hero Section -->
<section class="page-hero">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Sipariş Başarılı!</h1>
            <p class="hero-description">
                Düğününüz için özel anı toplama platformu hazırlanıyor. 
                E-posta adresinize detayları gönderdik.
            </p>
        </div>
    </div>
</section>

<!-- Success Details Section -->
<section class="success-section">
    <div class="container">
        <div class="success-container">
            <div class="success-icon">
                <img src="https://images.unsplash.com/photo-1519225421980-715cb0215aed?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" 
                     alt="Başarı" class="success-img">
            </div>
            
            <div class="success-content">
                <h2 class="success-title">Siparişiniz Alındı</h2>
                <p class="success-description">
                    Düğününüz için özel platform hazırlanıyor. Birkaç dakika içinde 
                    e-posta adresinize erişim bilgileri gönderilecek.
                </p>
                
                <div class="success-steps">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-text">
                            <h3>E-posta Onayı</h3>
                            <p>E-posta adresinize platform bilgileri gönderildi</p>
                        </div>
                    </div>
                    
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-text">
                            <h3>Platform Hazır</h3>
                            <p>QR kodunuz ve misafir sayfanız hazırlanıyor</p>
                        </div>
                    </div>
                    
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-text">
                            <h3>Kullanıma Başlayın</h3>
                            <p>Düğün mekanına QR kodu asabilirsiniz</p>
                        </div>
                    </div>
                </div>
                
                <div class="success-actions">
                    <a href="/Home/HowItWorks" class="btn btn-primary btn-lg">Nasıl Çalışır?</a>
                    <a href="/Home/Pricing" class="btn btn-accent btn-lg">Paketleri İncele</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2 class="cta-title">Başka Düğünler İçin</h2>
            <p class="cta-description">
                Arkadaşlarınıza da önerin, onlar da anılarını güvenle saklasın
            </p>
            <div class="cta-actions">
                <a href="/Home/Order" class="btn btn-primary btn-xl">Yeni Sipariş Ver</a>
                <a href="/" class="btn btn-accent btn-xl">Ana Sayfaya Dön</a>
            </div>
        </div>
    </div>
</section>


