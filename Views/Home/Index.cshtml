@section Scripts {
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const videoEl = document.getElementById('bgVideo');
        const sources = [
            '@Url.Content("~/uploads/4.mp4")',
            '@Url.Content("~/uploads/5.mp4")',
            '@Url.Content("~/uploads/6.mp4")',
            '@Url.Content("~/uploads/7.mp4")'
        ];
        let idx = 0;

        function playNext() {
            idx = (idx + 1) % sources.length;
            // Yumuşak geçiş için opacity düşür
            videoEl.classList.add('hidden');
            setTimeout(() => {
                videoEl.src = sources[idx];
                videoEl.load();
                videoEl.play().catch(() => {});
                // Yeni video başladıktan hemen sonra görünür yap
                videoEl.classList.remove('hidden');
            }, 800);
        }

        // İlk kaynak yükle
        videoEl.src = sources[idx];
        videoEl.play().catch(() => {});

        // Her videonun sonunda sıradaki videoya geç
        videoEl.addEventListener('ended', playNext);

        // Güvenlik: eğer video bitmeden uzun süre oynarsa yine de geçiş yap
        // (örn. çok uzun videoları daire içine almak için opsiyonel timeout)
        // setInterval(playNext, 60000);
    });
    </script>
}
