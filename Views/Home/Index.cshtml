@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<section class="hero-section">
    <!-- Background Image -->
    <div class="hero-background">
        <div class="hero-image">
            <video id="bgVideo" class="hero-bg-video" autoplay muted playsinline></video>
        </div>
        <div class="hero-overlay"></div>
    </div>

    <!-- Floating Elements kaldırıldı -->

    <!-- Hero Content -->
    <div class="hero-content-wrapper">
        <div class="hero-content">
            

            <!-- Main Title -->
            <h1 class="hero-title">
                Düğününüzde <span class="highlight">Anıları Toplayın</span>
            </h1>

            <!-- Description -->
            <p class="hero-description">
                Her düğün için özel QR kod ile misafirlerinizden fotoğraf, video ve mesaj toplayın. 
                Tüm anılarınız güvenli şekilde saklanır ve kolayca erişilebilir.
            </p>

            <!-- Action Buttons -->
            <div class="hero-actions">
                <a href="/Home/Order" class="btn btn-primary btn-lg">Hemen Sipariş Ver</a>
                <a href="/Home/HowItWorks" class="btn btn-accent btn-lg">Nasıl Çalışır?</a>
            </div>

            <!-- Hero özellik kartları kaldırıldı -->
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
        <div class="scroll-arrow"></div>
        <div class="scroll-text">Aşağı Kaydır</div>
    </div>
</section>

